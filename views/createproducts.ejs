<%- include('./partials/header') %>

<% if(success.length > 0){ %>
  <div class="fixed top-6 left-1/2 -translate-x-1/2 z-50 px-6 py-3 rounded-xl bg-emerald-500 shadow-xl">
    <span class="text-white font-medium tracking-wide">
      <%= success %>
    </span>
  </div>
<% } %>

<div class="min-h-screen bg-[#f7f7f5] flex">

  <!-- SIDEBAR -->
  <aside class="w-[22%] px-10 py-16 border-r border-zinc-200">
    <h2 class="text-xl font-bold tracking-wide mb-12">
      Admin Panel
    </h2>

    <nav class="flex flex-col gap-4 text-zinc-700">
      <a class="hover:font-semibold hover:text-black transition" href="">
        All Products
      </a>
      <a class="font-semibold text-black" href="">
        Create New Product
      </a>
    </nav>
  </aside>

  <!-- MAIN CONTENT -->
  <main class="w-[78%] px-16 py-16">

    <div class="max-w-4xl bg-white rounded-3xl shadow-2xl p-12">

      <h2 class="text-3xl font-semibold mb-2 text-zinc-900">
        Create New Product
      </h2>
      <p class="text-zinc-500 mb-10">
        Add a new premium item to your collection
      </p>

      <form
        autocomplete="off"
        action="/product/create"
        method="post"
        enctype="multipart/form-data"
        class="space-y-10">

        <!-- PRODUCT DETAILS -->
        <section>
          <h3 class="text-lg font-semibold mb-6 text-zinc-800">
            Product Details
          </h3>

          <div class="mb-6">
            <label class="block mb-2 text-sm font-medium text-zinc-600">
              Product Image
            </label>
            <input
              name="image"
              type="file"
              class="block w-full px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50">
          </div>

          <div class="grid grid-cols-3 gap-6">
            <input
              name="name"
              type="text"
              placeholder="Product Name"
              class="px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50 focus:ring-2 focus:ring-zinc-900 outline-none">

            <input
              name="price"
              type="text"
              placeholder="Product Price"
              class="px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50 focus:ring-2 focus:ring-zinc-900 outline-none">

            <input
              name="discount"
              type="text"
              placeholder="Discount (%)"
              class="px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50 focus:ring-2 focus:ring-zinc-900 outline-none">
          </div>
        </section>

        <!-- PANEL DETAILS -->
        <section>
          <h3 class="text-lg font-semibold mb-6 text-zinc-800">
            Panel Styling
          </h3>

          <div class="grid grid-cols-3 gap-6">
            <input
              name="bgcolor"
              type="text"
              placeholder="Background Color"
              class="px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50 focus:ring-2 focus:ring-zinc-900 outline-none">

            <input
              name="panelcolor"
              type="text"
              placeholder="Panel Color"
              class="px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50 focus:ring-2 focus:ring-zinc-900 outline-none">

            <input
              name="textcolor"
              type="text"
              placeholder="Text Color"
              class="px-4 py-3 rounded-xl border border-zinc-300 bg-zinc-50 focus:ring-2 focus:ring-zinc-900 outline-none">
          </div>
        </section>

        <!-- SUBMIT -->
        <div class="pt-6">
          <input
            class="px-10 py-4 rounded-full bg-gradient-to-r from-zinc-900 to-zinc-800 text-white font-semibold tracking-wide shadow-lg hover:shadow-xl hover:scale-[1.02] transition"
            type="submit"
            value="Create Product">
        </div>

      </form>
    </div>

  </main>
</div>

<%- include('./partials/footer') %>
