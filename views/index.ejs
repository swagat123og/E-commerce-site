<%- include('./partials/header') %>

<% if (error && error.length > 0) { %>
  <div class="fixed top-6 left-1/2 -translate-x-1/2 z-50 px-6 py-3 rounded-lg bg-red-500 shadow-lg">
    <span class="text-white font-medium"><%= error[0] %></span>
  </div>
<% } %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-zinc-50 to-zinc-100 px-10">

  <div class="w-full max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-10">

    <!-- REGISTER CARD -->
    <div class="bg-white/80 backdrop-blur-xl rounded-2xl shadow-xl p-10">
      <h3 class="text-4xl font-bold mb-2">
        Welcome to <span class="text-blue-500">Scatch</span>
      </h3>
      <p class="text-zinc-500 mb-8">Create your premium account</p>

      <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
        <input
          class="w-full px-4 py-3 rounded-lg bg-zinc-100 border border-zinc-200 focus:ring-2 focus:ring-blue-400 outline-none transition"
          type="text"
          placeholder="Full Name"
          name="fullname">

        <input
          class="w-full px-4 py-3 rounded-lg bg-zinc-100 border border-zinc-200 focus:ring-2 focus:ring-blue-400 outline-none transition"
          type="email"
          placeholder="Email Address"
          name="email">

        <input
          class="w-full px-4 py-3 rounded-lg bg-zinc-100 border border-zinc-200 focus:ring-2 focus:ring-blue-400 outline-none transition"
          type="password"
          placeholder="Password"
          name="password">

        <button
          class="w-full mt-4 py-3 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 text-white font-semibold shadow-md hover:shadow-lg hover:scale-[1.01] transition">
          Create My Account
        </button>
      </form>
    </div>

    <!-- LOGIN CARD -->
    <div class="bg-white/80 backdrop-blur-xl rounded-2xl shadow-xl p-10">
      <h3 class="text-4xl font-bold mb-2">Welcome Back</h3>
      <p class="text-zinc-500 mb-8">Login to your account</p>

      <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
        <input
          class="w-full px-4 py-3 rounded-lg bg-zinc-100 border border-zinc-200 focus:ring-2 focus:ring-blue-400 outline-none transition"
          type="email"
          placeholder="Email Address"
          name="email">

        <input
          class="w-full px-4 py-3 rounded-lg bg-zinc-100 border border-zinc-200 focus:ring-2 focus:ring-blue-400 outline-none transition"
          type="password"
          placeholder="Password"
          name="password">

        <button
          class="w-full mt-4 py-3 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 text-white font-semibold shadow-md hover:shadow-lg hover:scale-[1.01] transition">
          Login
        </button>
      </form>
    </div>

  </div>
</div>

<%- include('./partials/footer') %>
